{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@auth/*": [
        "auth/*"
      ],
      "@messages/*": [
        "messages/*"
      ],
      "@roles/*": [
        "roles/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@users/*": [
        "users/*"
      ]
    },
    "lib": [
      "dom",
      "es2018",
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
